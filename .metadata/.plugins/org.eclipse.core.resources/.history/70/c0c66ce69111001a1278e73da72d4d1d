import java.io.*;
import java.util.Scanner;

public class pattern {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		 
		  int rows;
		  System.out.println("Enter The No Of Rows0");
		  rows=sc.nextInt();
		
		int i, j, k;
		for(i=1;i<=rows;i++)
		{
		for(j=i;j<rows;j++)
		{
		System.out.print(" ");
		}
		for(k=1;k<(i*2);k++)
		{
		System.out.print("*");
		}
		System.out.println();
		}
		
	}
}
